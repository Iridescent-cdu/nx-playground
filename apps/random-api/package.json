{
  "name": "@nx-playground/random-api",
  "version": "0.0.1",
  "private": true,
  "nx": {
    "name": "random-api",
    "projectType": "application",
    "sourceRoot": "apps/random-api/src",
    "targets": {
      "serve": {
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "random-api:build",
          "runBuildTargetDependencies": false
        },
        "configurations": {
          "development": {
            "buildTarget": "random-api:build:development"
          },
          "production": {
            "buildTarget": "random-api:build:production"
          }
        }
      },
      "test": {
        "options": {
          "passWithNoTests": true
        }
      },
      "typeCheck": {
        "command": "tsc --project apps/random-api/tsconfig.json"
      },
      "formatCode": {
        "command": "prettier  --write \"apps/random-api/**/*.+(js|json|ts|tsx)\""
      }
    }
  }
}
